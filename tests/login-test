require '../base-test'
require '../pages/login-page'

class LoginTest
  def initialize
    @loginPage = LoginPage.new
    BaseTest.new(@loginPage.browser, "https://facebook.com/login")
  end
  def input_username_and_password
    @loginPage.username_textField.send_keys("bobLoblaw@lawblog.com")
    @loginPage.password_textField.send_keys("lawblog")
    self
  end
  def click_submit
    @loginPage.login_button.click
    self
  end
end

LoginTest.new.input_username_and_password.click_submit